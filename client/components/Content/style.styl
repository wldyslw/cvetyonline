@import '../../colors'

.grid {
    margin-top: 70px;
    min-height: calc(100vh - 70px);
    padding-bottom: 50px;
}

.pageheader {
    h1 {
        font-size: 30px !important;
        font-weight: 300 !important;
    }
    @media(max-width: 768px) {
        margin-top: 0;    
    }
}

.caption {
    font-family: Roboto;
    font-weight: 300 !important;
}

overflowGradient(h) {
    content: "";
    text-align: right;
    position: absolute;
    bottom: 0;
    right: 0;
    width: 30%;
    height: h;
    background: linear-gradient(to right, rgba(255, 255, 255, 0), rgba(255, 255, 255, 1) 50%);
}

.thumbnail {
    padding: 10px;
    border: none;
    overflow: hidden;
    box-shadow: 0 0 1px rgba(0,0,0,.2);

    p {
        overflow: hidden;
        position: relative;
        height: 40px;
        @media(max-width: 992px) {
            height: 60px;
        }
        @media(max-width: 350px) {
            height: 70px;
        } 
        &:after {
            overflowGradient(1.2em);
        }
    }

    img {
        display: block;
        margin: 0 auto !important;
        height: 240px;
        width: 240px;
        @media(max-width: 992px) {
            height: 120px;
            width: 120px;
            margin: 0 20px 0 0 !important;
        } 
    }

    h3 {
        position: relative
        height: 26px;
        max-width: 100%;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        @media(max-width: 992px) {
            margin-top: 0 !important;
        } 
        &:after {
            overflowGradient(1.2em);
        }
    }

    &:hover {
        box-shadow: 0 0 20px rgba(0,0,0,.1);
    }

    .caption {
        overflow: hidden;
        @media(max-width: 992px) {
            padding: 0 !important;
        }    
    }

    @media(max-width: 992px) {
        display: flex;
    }
}

.cart-btn {
    border-radius: 18px;
    .glyphicon { margin-right: 7px; }
}

.thumbnail__options {
    color: ColorRed;
    padding: 0 15px;
}

.carousel-home {
    .btn {
        margin: 20px 0;
    }
    .item {
        height: 500px !important;
        overflow: hidden;
        @media(max-width: 576px) {
            height: 400px !important;  
        }
        img {
            @media(max-width: 768px) {
                min-width: 130%;
            }
            @media(max-width: 576px) {
                min-width: 200%;
                transform: translateX(-25%);
            }
        }
    }
}

.carousel-control {
    background-image: none !important;
    &:hover, &:focus {
        background-color: rgba(100,100,100,.1);
    }
} 

.not-found {
    color: #fff !important;
    background-color: ColorRed !important;
}

.product-img {
    width: 100%;
}

.product-price {
    color: ColorRed !important;
    margin: 25px 0; 
}

.product {
    h3 { font-weight: 400 !important }
    .text-muted {
        font-weight: 300 !important;
        margin-top: 20px !important;
    }
}

.counter {
    width: 100px;
    height: 36px;
    display: inline-block;
    float: left !important;
    margin-right: 20px;
}

.form-control[readonly] {
    background-color: #fff !important;
}

.counter .btn {
    border-radius: 18px;
}

.cart-img {
    height: 64px;
    width: 64px;
}

.cart-sum {
    clear: both;
    margin: 10px 20px !important;
}

table .close {
    float: none !important;
    margin-right: 10px;
    font-weight: 100 !important;
}

.spinner {
    animation: spin 2s linear infinite;
}

@keyframes spin {
    from { transform: rotate(0deg) }
    to { transform: rotate(360deg) }
}

.sort-btn {
    @media(max-width: 576px) {
        float: none !important;
        margin-top: 5px;
    }
    .dropdown-menu {
        @media(min-width: 576px) {
            right: 0;
            left: auto;  
        } 
    }
}

.table {
    font-size: 16px;
    .price {
        color: ColorRed;
    }
}

.category-link {
    color: ColorRed;    
}

p .glyphicon {
    margin-right: 5px;
}
