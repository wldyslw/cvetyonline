@require '../../assets/style/common.styl'

.promo {
    position: relative;
    height: 600px;
    background-color: #fff;
    box-shadow: 0 3px 5px -2px rgba(0,0,0,.1);
    overflow: hidden;
    transition: height .2s;
    @media screen and (max-width: 768px) {
        height: 450px;
        margin: 60px -10px 0;
    }
}

.promo_collapsed {
    height: 0;
}

.promo__img {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    height: 130%;
}

.promo__shadow {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background-color: rgba(255,255,255, .6);
}

.promo__description {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    padding: 0 15px 55px;
    width: 100%;
    text-align: center;
}

.promo__header {
    font-family: RobotoLight, sans-serif;
    font-weight: 100;
    font-size: 50px;
    text-align: center;
    text-transform: uppercase;
    @media screen and (max-width: 768px) {
        font-size: 30px;
    }
}

.promo__text {
    font-family: RobotoLight, sans-serif;
    font-weight: 100;
    font-size: 20px;
    color: gray;
    text-align: center;
    text-transform: uppercase;
    @media screen and (max-width: 768px) {
        font-size: 15px;
    }
}

.promo__learnmore-btn {
    btn-solid(30px);
    font-size: 20px
    padding: 15px 20px;
    margin-top: 20px;
}

.content-wrapper {
    min-height: 100vh;
}

.content-wrapper__header {
    font-family: BukhariScript;
    font-size: 40px;
    font-weight: 100;
    margin-top: 50px;
}

.card-wrapper {
    padding: 30px 0;
    display: flex;
    flex-wrap: wrap;
    margin: 0 -10px;
}

.card {
    display: inline-block;
    min-width: 280px;
    max-width: 100%;
    width: 300px;
    flex-grow: 1;
    margin: 20px 10px;
    transition: box-shadow .2s;
    &:hover {
        .card__shadow {
            opacity: 1;
        }
        .card__btn-view_in-shadow {
            top: 60px;
        }
    }
}

.card__thumbnail {
    position: relative;
}

.card__shadow {
    opacity: 0;
    position: absolute;
    top: 0;
    left: 0;
    min-height: 200px;
    height: 100%;
    width: 100%;
    background-color: rgba(0,0,0,.6);
    transition: opacity .1s ease-in-out;
}

.card__img {
    width: 100%;
    display: block;
}

.card__caption {
    padding: 15px 0;
}

.card__header {
    color: #000;
}

.card__description {
    color: gray;
    margin-top: 5px;
}

.card__btn-view {
    btn-solid(30px);
    text-transform: uppercase;
    padding: 10px 20px;
    margin: 15px 0;
}

.card__btn-view_in-shadow {
    btn-solid();
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    height: 70px;
    width: 70px;
    transition: top .2s;
    &:before {
        font-family: FontAwesome;
        font-size: 20px;
        content: '\f002';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
    }
    &:after {
        font-size: 20px;
        content: 'Подробнее';
        position: absolute;
        bottom: -35px;
        left: 50%;
        transform: translateX(-50%);
    }
}

.catalog-page {
    display: flex;
    flex-wrap: wrap;
}

.catalog-page__fig {
    padding: 30px 0;
    flex-grow: 1;
    min-width: 350px;
    max-width: 100%;
    width: 400px;
}

.catalog-page__img {
    width: 100%;
    border-radius: 3px;
    box-shadow: 0 3px 5px -2px rgba(0,0,0,.1);
}

.catalog-page__details {
    min-width: 350px;
    max-width: 100%;
    width: 400px;
    flex-grow: 1;
    padding: 30px;
}

.catalog-page__price {
    font-size: 35px;
}

.catalog-page__description {
    font-size: 24px;
    padding: 25px 0;
}

.catalog-page__buy {
    btn-solid(35px);
    padding: 15px 20px;
    font-size: 24px;
}
